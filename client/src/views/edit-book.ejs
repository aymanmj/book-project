                </div>
              </div>
              <% if (editing) { %>
              <input type="hidden" value="<%= book.id %>" name="bookId" />
              <% } %>
              <button type="submit" class="btn btn-success px-5 py-2.5 mt-4">
                <%= editing ? 'Update Book' : 'Add Book' %>
